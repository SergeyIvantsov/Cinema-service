<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.30.xsd">


    <changeSet id="1" author="sergey">
        <createTable tableName="films_for_accounts">
            <column name="account_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="film_id" type="INT">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2" author="sergey">
        <addForeignKeyConstraint baseTableName="films_for_accounts" baseColumnNames="account_id"
                                 constraintName="films_for_accounts_account_id"
                                 referencedTableName="accounts"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="3" author="sergey">
        <addForeignKeyConstraint baseTableName="films_for_accounts" baseColumnNames="film_id"
                                 constraintName="films_for_accounts_film_id"
                                 referencedTableName="films"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
